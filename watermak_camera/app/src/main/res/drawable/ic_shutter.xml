<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外圈 -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
            <size
                android:width="72dp"
                android:height="72dp" />
        </shape>
    </item>
    <!-- 内圈 -->
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list> 